<%= form_for(@location, :remote => true) do |f| %> 
  <%= f.hidden_field :user_id, :value => @location.user_id %>

  <%= f.label :path %>
  <%= f.text_field :link_path, :value => @location.link_path %>

  <% if @location.page_title %>
    <%= f.label :page_title  %>
    <%= f.text_field :page_title, :value => @location.page_title %>
  <% end %>

  <% if @location.new_record? %>
    <%= f.submit 'data-target' => '.new_favorite_location', 'data-insertion' => 'before' %>
  <% else %>
    <%= f.submit 'data-target' => ".favorite-location-#{@location.id}", 'data-insertion' => 'html' %>
  <% end %>
<% end %> 
